<div class="container-fluid">
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <%= link_to root_path, class: "navbar-brand", aria: { current: "page" } do %>
      Iconic
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
<% if current_user %>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <!-- Lien vers new product -->
        <li class="nav-item">
          <%= link_to new_product_path, class: "nav-link" do %>
            <%= tag.i(class: "fa-solid fa-circle-plus icon icone-style") %>
            <span class="icon-text">Nouveau produit</span>
          <% end %>
        </li>
        <!-- Lien vers "Mes réservations" -->
        <li class="nav-item">
          <%= link_to bookings_path, class: "nav-link active", aria: { current: "page" } do %>
            <%= tag.i(class: "fa-solid fa-calendar icon icone-style") %>
            <span class="icon-text">Mes réservations</span>
          <% end %>
        </li>
        <!-- Lien vers "Mes favoris" (si l'utilisateur est connecté) -->
        <% if current_user %>
          <li class="nav-item">
            <%= link_to user_bookmarks_path(current_user.id), class: "nav-link active", aria: { current: "page" } do%>
              <%= tag.i(class: "fa-solid fa-heart icon icone-style") %>
              <span class="icon-text">Mes favoris</span>
            <% end %>
          </li>
        <% end %>
      </ul>
      <% end %>


      <!-- Barre de recherche et bouton de recherche -->
      <form class="d-flex ms-auto" role="search" method="get" action="<%= root_path %>">
        <input class="form-control me-2" type="search" name="query" placeholder="Rechercher" aria-label="Rechercher">
        <button class="btn btn-outline search-btn-navbar me-2" type="submit">Rechercher</button>
      </form>
      <!-- Menu déroulant à droite -->
      <div class="nav-item dropdown">
        <a href="#" class="avatar pl-2" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "dropdown menu" %>
        </a>
        <div class="dropdown-menu dropdown-menu-end text-center" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <!-- Nom d'utilisateur (si connecté) -->
            <ul class="list-unstyled"><%= current_user.username %></ul>
            <!-- Lien de déconnexion (si connecté) -->
            <ul class="list-unstyled"><%= link_to 'Se déconnecter', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'devise_decorations' %></ul>
          <% else %>
            <!-- Lien de connexion (si non connecté) -->
            <%= link_to 'Se connecter', new_user_session_path, class: 'devise_decorations' %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</div>
