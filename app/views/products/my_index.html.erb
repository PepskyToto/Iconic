<% if @products.length == 0 %>
  <h4 class = "p-5 text-center">Mes produits</h4>
  <div class="cards colored-border-top">
    <p class="text-center">Vous n'avez pas encore publi√© de produits</p>
  </div>
  <div class ="d-flex justify-center">
  <%= link_to "Ajouter un produit", new_product_path, class: 'resa-button mx-auto text-center' %>
  </div>
  <%# <%= link_to "Modifier", edit_product_path(@product), class: "resa-button mx-auto text-center" %> 
<% end %>


<div class="cards colored-border-top">
  <% @products.each do |product| %>
      <div class="card">
    <%= link_to product_path(product), class: "full-w" do %>
        <% if product.image.nil? %>
          <% product.image = "placeholder.jpg" %>
          <%= image_tag(product.image, alt: product.title) %>
        <% else %>
          <%= image_tag(product.image, alt: product.title) %>
        <% end %>
        <div class="card-info">
          <h2 class ="product-style"><%= product.title %></h2>
          <p class="description"><%= product.description %></p>
          <p class = "size-style">Taille : <%= product.size %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>