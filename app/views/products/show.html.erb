<div id = "main_container" class="container mt-5">
    <div class="col-10 mx-auto">
  <div class="row">
    <!-- Grande photo (col-6) -->
    <div class="col-12 col-md-6 mt-3 mb-3">
      <%= image_tag "placeholder.jpg", class: "img-fluid product_images", alt: "Large Photo" %>
    </div>

    <!-- Quatre petites photos (col-6) formant deux lignes de deux -->
    <div class="col-12 col-md-6">
      <div class="row">
        <div class="col-6 mt-3 mb-3">
          <%= image_tag "placeholder.jpg", class: "img-fluid product_images", alt: "Small Photo 1" %>
        </div>
        <div class="col-6 mt-3 mb-3">
          <%= image_tag "placeholder.jpg", class: "img-fluid product_images", alt: "Small Photo 2" %>
        </div>
        <div class="col-6 mt-3 mb-3">
          <%= image_tag "placeholder.jpg", class: "img-fluid product_images", alt: "Small Photo 3" %>
        </div>
        <div class="col-6 mt-3 mb-3">
          <%= image_tag "placeholder.jpg", class: "img-fluid product_images", alt: "Small Photo 4" %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="mt-3">
  <div class = "row">
    <div class = "col-6">
      <h1 class="pb-3 colored-border-bottom"><%= @product.title %></h1>
      <p><%= @product.description %></p>
    </div>
        <div class = "col-6 reservation-box">
          <h3><%= @product.price %>€ par jour</h3>
          <button type="button" class="resa-button">Réserver</button>
        </div>
  </div>
</div>
