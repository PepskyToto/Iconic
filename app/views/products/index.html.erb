
<%= link_to "Add a new product", new_product_path, class: "btn btn-primary" %>

<h2 class = "p-2">Toutes les annonces</h2>
<div class="cards">
  <% @products.each do |product| %>
    <div class="card">
      <i class="fa-solid fa-heart favorite-icon"></i>
      <%= image_tag(product.image, alt: product.title) %>
      <div class="card-info">
        <h2><%= product.title %></h2>
        <p class="description"><%= product.description %></p>
      </div>
    </div>
  <% end %>
</div>


<% if current_user %>
  <%= link_to "Ajouter un nouveau produit", new_product_path %>
<% end %>

