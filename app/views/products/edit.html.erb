<div id="edit_container" class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="text-center">
        <%= simple_form_for @product, url: product_path(@product), html: { class: "mt-3" } do |form| %>
          <div class="row">
            <%= form.input :category, label: "Catégorie de votre produit" %>
            <%= form.input :size, label: "Taille" do %>
              <%= form.collection_select :size, %w[XS S M L XL XXL XXXL], :to_s, :to_s, prompt: 'Sélectionner une taille' %>
            <% end %>
            <%= form.input :price, label: "Prix" %>
            <%= form.input :title, label: "Titre" %>
            <%= form.input :description, label: "Description" %>
            <div class="col-12">
              <%= form.button :submit, "Modifier votre produit", class: "resa-button" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
