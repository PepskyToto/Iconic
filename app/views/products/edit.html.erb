<%= simple_form_for @product  do |form| %>
  <%= form.input :category, label: "Catégorie de votre produit" %>
  <%= form.input :size, label: "Taille" do %>
    <%= form.collection_select :size, %w[XS S M L XL XXL XXXL], :to_s, :to_s, prompt: 'Sélectionner une taille' %>
  <% end %>
  <%= form.input :price, label: "Prix" %>
  <%= form.input :title , label: "Titre"%>
  <%= form.input :description, label: "Description" %>
  <%= form.button :submit, "Modifier votre produit" %>
<% end %>