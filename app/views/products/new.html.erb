<%= simple_form_for @product do |form| %>
  <%= form.input :category %>
  <%= form.input :sexe do %>
    <%= form.collection_select :sexe, %w[Homme Femme Enfant], :to_s, :to_s, prompt: 'Sélectionner un sexe' %>
  <% end %>
  <%= form.input :couleurs do %>
    <%= form.collection_select :couleurs, %w[Rouge Bleu Jaune Vert Blanc Noir Gris Orange Violet Marron], :to_s, :to_s, prompt: 'Sélectionner une couleur' %>
  <% end %>
  <%= form.input :textile_type do %>
    <%= form.collection_select :textile_type, %w[Laine Coton Soie Lin Synthétique Autre1 Autre2 Autre3], :to_s, :to_s, prompt: 'Sélectionner un type de textile' %>
  <% end %>
  <%= form.input :size do %>
    <%= form.collection_select :size, %w[XS S M L XL XXL XXXL], :to_s, :to_s, prompt: 'Sélectionner une taille' %>
  <% end %>
  <%= form.input :price %>
  <%= form.input :title %>
  <%= form.input :description %>
  <%= form.input :availability, as: :boolean %>
  <%= form.input :image, as: :file %>
  <%= form.button :submit, "Ajouter le produit" %>
<% end %>
